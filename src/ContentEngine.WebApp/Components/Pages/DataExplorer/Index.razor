@page "/data-explorer"
@using ContentEngine.WebApp.Components.Shared

<PageTitle>数据洞察 - ContentEngine</PageTitle>

<SchemaListPage Configuration="@_pageConfiguration" />

@code {
    private SchemaListPageConfiguration _pageConfiguration = new();

    protected override void OnInitialized()
    {
        _pageConfiguration = new SchemaListPageConfiguration
        {
            PageTitle = "数据洞察",
            PageDescription = "浏览和分析您的结构化数据",
            SearchPlaceholder = "搜索数据结构...",
            LoadingText = "正在加载数据结构列表...",
            EmptyStateIcon = Icons.Material.Filled.Analytics,
            EmptyStateTitle = "暂无可浏览的数据结构",
            EmptyStateDescription = "请先创建数据结构并添加数据。",
            NoSearchResultsTitle = "未找到匹配的数据结构",
            NoSearchResultsDescription = "尝试修改您的搜索词或清除筛选条件。",
            ShowCreateButton = false,
            SchemaCardMode = SchemaCard.SchemaCardMode.DataExplorer,
            EnablePagination = false
        };
    }
}

