{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "LiteDbOptions": {
    // Recommended: Specify a path outside the source control directory, e.g., a subfolder in user profile or a dedicated data folder.
    "DatabasePath": "ContentEngine_Data.db" 
  },
  // Configuration for Semantic Kernel AI Service
  "AIService": {
    // Specify the type of service: "AzureOpenAI" or "OpenAI"
    "Type": "AzureOpenAI", 
    // Specify the Model ID (for OpenAI) or Deployment Name (for Azure OpenAI)
    "ModelId": "YOUR_MODEL_ID_OR_DEPLOYMENT_NAME",
    // --- Azure OpenAI Specific --- (Required if Type is AzureOpenAI)
    "Endpoint": "YOUR_AZURE_OPENAI_ENDPOINT", // e.g., https://your-resource-name.openai.azure.com/
    // --- OpenAI Specific --- (Optional, only if Type is OpenAI and using Org ID)
    // "OrgId": "YOUR_OPENAI_ORG_ID",
    // --- Common --- (Required, use User Secrets or appsettings.Development.json for actual key)
    "ApiKey": "YOUR_API_KEY" // IMPORTANT: Use User Secrets or Development settings for real key!
  }
}
